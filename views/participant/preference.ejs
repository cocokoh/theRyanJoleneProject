<div class="dimmer"></div>
<div id="form-preference">
  <form action="/preference" method="POST">
    <div class="form-group">
      <label for="attending">Attending</label>
      <select class="attending" name="attending">
        <option value="true">Yes</option>
        <option value="false">No</option>
      </select>
    </div>
    <div class="form-group">
      <label for="foodPref">Food Preference</label>
      <select class="foodPref" name="foodPref">
        <option value="any">Any</option>
        <option value="halal">Halal</option>
        <option value="vegetarian">Vegetarian</option>
        <option value="other">Other</option>
      </select>
    </div>
    <div class="form-group">
      <label for="addGuest">Additional Guests</label>
      <select class="addGuest" name="addGuest">
        <option value="0">0</option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
      </select>
    </div>
    <div class="form-group" id="inputAddGuest">
    </div>
    <button type="submit" class="btn btn-primary" id="preference-submit">Update</button>
  </form>
</div>
