<div class="dimmer"></div>
<div id="form-preference">
  <form action="/preference?_method=PUT" method="POST">
    <div class="form-group">
      <label for="attending" class="update-label">Attending</label>
      <select class="attending" name="attending">
        <option value=true
        <% if (user.attending) { %>
          selected
        <% } %>
        >Yes</option>
        <option value=false
        <% if (!user.attending) { %>
          selected
        <% } %>
        >No</option>
      </select>
    </div>

    <div class="form-group">
      <label for="foodPref" class="update-label">Food Preference</label>
      <input type="text" class="form-control" id="foodPref" placeholder="eg. Any, Halal, Vegetarian etc." name="foodPref" value=<%= user.foodPref%>>
    </div>
    <% if (user.headCountAllowed > 1) { %>
      <div class="form-group">
        <label for="addGuest" class="update-label">Additional Guests</label>
        <input type="number" class="form-control" id="addGuest" name="addGuest"

        <% if (!user.attending) { %>
          placeholder=0
          value=0
        <% } else { %>
          placeholder=<%= user.headCountSelected - 1 %>
          value=<%= user.headCountSelected - 1 %>
        <% } %>

        max=<%= user.headCountAllowed - 1 %> min=0>
      </div>
    <% } %>

    <a href="/changepassword" style="color:white">Change Password</a>
    <br><br>

    <% include ../partials/alerts %>

    <button type="submit" class="btn btn-primary" id="preference-submit">Update</button>
  </form>
</div>
