<div class="dimmer"></div>
<div id="form-signup">
  <form action="/signup" method="POST">
    <div class="form-group">
      <label for="name" class="auth-label">Name</label>
      <input type="text" class="form-control" id="name" placeholder="Name" name="name">
    </div>

    <div class="form-group">
      <label for="email" class="auth-label">Email</label>
      <input type="email" class="form-control" id="email" placeholder="Email" name="email">
    </div>

    <div class="form-group">
      <label for="password" class="auth-label">Password</label>
      <input type="password" class="form-control" id="password" placeholder="Password" name="password">
    </div>

    <div class="form-group">
      <label for="passConfirmation" class="auth-label">Confirm Password</label>
      <input type="password" class="form-control" id="passConfirmation" placeholder="Confirm Password" name="passConfirmation">
    </div>

    <% include ../partials/alerts %>

    <button type="submit" class="btn btn-primary" id="signup-submit" name="formType" value="signup">Signup</button>
  </form>
</div>
