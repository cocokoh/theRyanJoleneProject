<div class="dimmer"></div>
<div id="form-login">
  <form action="/login" method="POST">
    <div class="form-group">
      <label for="loginEmail">Email</label>
      <input id="loginEmail" class="form-control" type="email" name="email">
    </div>

    <div class="form-group">
      <label for="loginPassword">Password</label>
      <input id="loginPassword" class="form-control" type="password" name="password">
    </div>

    <% include ../partials/alerts %>

    <button type="submit" class="btn btn-primary" id="signup-submit" name="formType" value="signup">Login</button>

  </form>
</div>
